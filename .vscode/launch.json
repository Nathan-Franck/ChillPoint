{
    "configurations": [
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug",
            "program": {
                "lua": "lua_jit/luajit",
                "file": "source/Lua/main.lua"
            }
        },
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug and Run",
            "program": {
                "lua": "lua_jit/luajit",
                "file": "source/main.lua"
            },
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://127.0.0.1:5500/website/Viewer.Parser.html",
            "webRoot": "${workspaceFolder}/website"
        }
    ]
}