        {
            "type": "node",
            "request": "launch",
            "name": "UI.Tests",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "program": "${workspaceFolder}/website/js/Entry.Electron.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "../UI.Tests.html"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "trace": true,
            "outputCapture": "std",
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "MouseAccuracy",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "program": "${workspaceFolder}/website/js/Entry.Electron.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "../MouseAccuracy.html"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "trace": true,
            "outputCapture": "std",
            "console": "internalConsole"
        },
        {
            "name": "Start Server.Web",
            "type": "node",
            "program": "${workspaceFolder}/distributions/Entry.Server.Web.js",
            "cwd": "${workspaceFolder}",
            "request": "launch"
        },
        {
            "name": "Start Server.PeerAdvertising",
            "type": "node",
            "program": "${workspaceFolder}/distributions/Entry.Server.PeerAdvertising.js",
            "cwd": "${workspaceFolder}",
            "request": "launch"
        },
    ]
